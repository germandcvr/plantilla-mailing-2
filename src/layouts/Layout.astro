---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <div
      style="
		width: 100%; 
		max-width: 600px; 
		min-width: 300px; 
		font-family: Verdana, Geneva, Tahoma, sans-serif; 
		font-size: 20px;
		font-size: clamp(10px, 5vw, 20px);
		color: #626262;
		margin: 0 auto;
		padding: 0;
	"
    >
      <slot />
    </div>
  </body>
</html>
